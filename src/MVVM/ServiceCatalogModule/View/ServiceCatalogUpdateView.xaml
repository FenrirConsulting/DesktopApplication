<UserControl x:Class="IAMHeimdall.MVVM.View.ServiceCatalogUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d1="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:IAMHeimdall.MVVM.ViewModel"
             xmlns:custom="clr-namespace:IAMHeimdall.Resources"
             FontFamily="/IAMHeimdall;component/Resources/Fonts/#Lato"
             mc:Ignorable="d1 d"
             d:DesignHeight="600"
             d:DesignWidth="1200">
    <UserControl.DataContext>
        <viewModel:ServiceCatalogUpdateViewModel>
        </viewModel:ServiceCatalogUpdateViewModel>
    </UserControl.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:CallMethodAction TargetObject="{Binding}" MethodName="LoadData" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border Margin="0,0,0,0"
            BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0.0" Color="{StaticResource ResourceKey=JuteBrownColorDarker}" />
                <GradientStop Offset="0.5" Color="{StaticResource ResourceKey=JuteBrownLighterColor}" />
                <GradientStop Offset="1.0" Color="{StaticResource ResourceKey=JuteBrownColor}" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border Background="{StaticResource DeepOnyx}" />
                <Label Content="Update Service Catalog Item"
                       Width="436"
                       Height="40"
                       Padding="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource HeaderLabelStyle}"
                       Foreground="{StaticResource StoneWhite}"
                       FontWeight="Bold" />

                <Label x:Name="StatusLabel"
                       Content="{Binding StatusString}"
                       Width="Auto"
                       Height="28"
                       Margin="0,5,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Style="{StaticResource LabelStyle}"
                       Foreground="{StaticResource NeonBlue}"
                       FontWeight="Bold" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="2.5*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0"
                      Grid.ColumnSpan="4"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="0" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,5">
                                <Label  x:Name="ServicesLabel"
                                        Content="Service(s)"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="15"
                                       Background="{StaticResource TricornBlack}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Margin="5"
                                       Height="Auto"
                                       Width="Auto">
                                    <TextBox x:Name="ServicesBox"
                                       AcceptsReturn="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Height="Auto"
                                       Width="Auto"
                                       Margin="3"
                                       Style="{StaticResource MultiLineBox}"
                                       Text="{Binding ServiceString ,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="1" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,10">
                                <Label x:Name="DescriptionLabel"
                                       Content="Description"
                                       Height="28"
                                       DockPanel.Dock="Top"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="{StaticResource StoneWhite}"
                                       FontWeight="Bold" />
                                <Border CornerRadius="15"
                                       Background="{StaticResource TricornBlack}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Margin="5"
                                       Height="Auto"
                                       Width="Auto">
                                    <TextBox x:Name="DescriptionBox"
                                       AcceptsReturn="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Height="Auto"
                                       Width="Auto"
                                       Margin="3"
                                       Style="{StaticResource MultiLineBox}"
                                       Text="{Binding DescriptionString ,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="2" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,10">
                                <Label x:Name="ExpediteLabel"
                                       Content="Expedite Process"
                                       Height="28"
                                       DockPanel.Dock="Top"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="{StaticResource StoneWhite}"
                                       FontWeight="Bold" />
                                <Border CornerRadius="15"
                                       Background="{StaticResource TricornBlack}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Margin="5"
                                       Height="Auto"
                                       Width="Auto">
                                    <TextBox x:Name="ExpediteBox"
                                       AcceptsReturn="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Height="Auto"
                                       Width="Auto"
                                       Margin="3"
                                       Style="{StaticResource MultiLineBox}"
                                       Text="{Binding ExpediteString ,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>

                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="3" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="5*"/>
                            </Grid.RowDefinitions>
                            <DockPanel         
                                        Grid.Row="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,0,0,5">
                                <Label  x:Name="SLALabel"
                                        Content="SLA"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox x:Name="SLABox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding SLAString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>

                            <DockPanel         
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,0,0,5">
                                <Label  
                                        Content="SubSystem(s)"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox 
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding SubSystemString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>

                    </Border>
                </Grid>

                <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    >
                    <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,5">
                        <Label  x:Name="AssignmentLabel"
                                        Content="Assignment Groups"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />

                        <ListView  x:Name="AssignmentGroupList"
                                       Grid.Row="1"
                                       Style="{StaticResource ListBoxStyle}"
                                       Margin="2,2,2,2"
                                       ItemsSource="{Binding AssignmentGroupsList}"
                                       SelectionMode="Single"
                                       SelectedItem="{Binding SelectedAssignmentGroup}">
                            <ListView.InputBindings>
                                <KeyBinding Key="Space"
                                                        Command="{Binding SpaceCheckboxCommand}"
                                                        CommandParameter="AssignmentGroupType" />
                            </ListView.InputBindings>
                            <ListView.ItemTemplate >
                                <DataTemplate>
                                    <Grid>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <CheckBox.Content>
                                                <TextBox Text="{Binding GroupName}"></TextBox>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>


                    </DockPanel>
                </Border>


                <Grid Grid.Row="1"
                      Grid.ColumnSpan="4"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>

                   

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="1" >
                        <Grid>
                            <StackPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,10,0,5">
                                <Label  x:Name="RequestSourceLabel"
                                        Content="Request Source"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                    Background="{StaticResource TricornBlack}"
                                    Width="Auto"
                                    Height="40"
                                    Margin="20,0,20,0">
                                    <ComboBox  x:Name="FormTypeBox"
                                    Style="{StaticResource ComboBoxTheme}"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    Width="Auto"
                                    SelectedIndex="0"
                                    ItemsSource="{Binding RequestSourcesList}"
                                    DisplayMemberPath="RequestSource"
                                    SelectedItem="{Binding SelectedRequestSource}" />
                                </Border>

                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="20,10,20,0">
                                    <TextBox x:Name="URLBox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        IsReadOnly="True"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding URLString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </StackPanel>
                        </Grid>
                        
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="2" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,10">
                                <Label x:Name="TasksLabel"
                                       Content="Tasks"
                                       Height="28"
                                       DockPanel.Dock="Top"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="{StaticResource StoneWhite}"
                                       FontWeight="Bold" />
                                <Border CornerRadius="15"
                                       Background="{StaticResource TricornBlack}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Margin="5"
                                       Height="Auto"
                                       Width="Auto">
                                    <TextBox x:Name="TasksBox"
                                       AcceptsReturn="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Height="Auto"
                                       Width="Auto"
                                       Margin="3"
                                       Style="{StaticResource MultiLineBox}"
                                       Text="{Binding TasksString ,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>
                        
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="3" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="5,10,0,10">
                                <Label x:Name="HintsLabel"
                                       Content="Hints"
                                       Height="28"
                                       DockPanel.Dock="Top"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelStyle}"
                                       Foreground="{StaticResource StoneWhite}"
                                       FontWeight="Bold" />
                                <Border CornerRadius="15"
                                       Background="{StaticResource TricornBlack}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Margin="5"
                                       Height="Auto"
                                       Width="Auto">
                                    <TextBox x:Name="HintsBox"
                                       AcceptsReturn="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Height="Auto"
                                       Width="Auto"
                                       Margin="3"
                                       Style="{StaticResource MultiLineBox}"
                                       Text="{Binding HintsString ,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>

                    </Border>
                </Grid>

                <Grid Grid.Row="2"                      
                      Grid.ColumnSpan="4"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>


                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="1" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,10,0,5">

                                <Label  x:Name="EnvrionmentLabel"
                                        Content="Envrionment"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />

                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="40"
                                        Margin="20,0,20,0">
                                    <ComboBox  x:Name="EnvrionmentTypeBox"
                                        Style="{StaticResource ComboBoxTheme}"
                                        Margin="3"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Width="Auto"
                                        SelectedIndex="0"
                                        ItemsSource="{Binding RequestEnvironmentList}"
                                        DisplayMemberPath="RequestEnvironment"
                                        SelectedItem="{Binding SelectedRequestEnvironment}" />
                                </Border>

                            </DockPanel>
                        </Grid>
                        
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="2" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="5*"/>
                            </Grid.RowDefinitions>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,0,0,5">
                                <Label  x:Name="ITPMLabel"
                                        Content="ITPM App ID"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox x:Name="ITPMBox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding ITPMString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>

                            </DockPanel>


                            <DockPanel Grid.Row="1">
                                <Label  x:Name="ArcherLabel"
                                        Content="Archer App ID"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox x:Name="ArcherBox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding ArcherString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>

                            </DockPanel>

                        </Grid>
                        
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="3" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,10,0,5">
                                <Label  x:Name="ProvisioningLabel"
                                        Content="Provisioning Team"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox x:Name="ProvisioningBox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding ProvisioningString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>
                        </Grid>

                    </Border>
                </Grid>

                <Grid Grid.Row="3"
                      Grid.ColumnSpan="4"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2.5*"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="0" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Margin="5,10,0,5">
                                <Label  x:Name="ArticleLabel"
                                        Content="Article"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />
                                <Border CornerRadius="5"
                                        Background="{StaticResource TricornBlack}"
                                        Width="Auto"
                                        Height="26"
                                        Margin="5">
                                    <TextBox x:Name="ArticleBox"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Height="Auto"
                                        Width="Auto"
                                        Margin="3"
                                        Style="{StaticResource UpdateBox}"
                                        Text="{Binding ArticleString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Border>
                            </DockPanel>

                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="1" >
                        <Grid>
                            <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="2">
                                <Label  x:Name="DomainLabel"
                                        Content="Domains"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="2">
                                <Label  x:Name="AssignedDomainLabel"
                                        Content="Assigned"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold"/>
                                <ListView x:Name="AssignedListView"
                                        Grid.Row="1"
                                        Style="{StaticResource ListBoxStyle}"
                                        DisplayMemberPath="DomainTerm"
                                        SelectedIndex="0"
                                        Margin="2,2,2,2"
                                        SelectedItem="{Binding SelectedAssignedDomain}"
                                        ItemsSource="{Binding AssignedDomains}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDoubleClick">
                                                        <i:InvokeCommandAction Command="{Binding RemoveListCommand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ListView>
                                 </DockPanel>
                               </Grid>

                                <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5*"/>
                                            <RowDefinition Height="5*"/>

                                        </Grid.RowDefinitions>
                                <Button x:Name="AddArrow"
                                        Grid.Row="0"
                                        Style="{StaticResource TitleButtonTheme}"
                                        Foreground="Transparent"
                                        Height="25"
                                        Width="25"
                                        Command="{Binding AddListCommand}">
                                   <Button.Background>
                                     <ImageBrush ImageSource="/Resources/Images/LeftArrow.png" />
                                   </Button.Background>
                                </Button>
                                    
                                    
                                 <Button x:Name="RemoveArrow"
                                        Style="{StaticResource TitleButtonTheme}"
                                        Foreground="Transparent"
                                        Height="25"
                                        Width="25"
                                        Grid.Row="1"
                                        Command="{Binding RemoveListCommand}">
                                    <Button.Background>
                                      <ImageBrush ImageSource="/Resources/Images/RightArrow.png" />
                                    </Button.Background>
                                 </Button>
                                 </Grid>

                                <Grid Grid.Column="2">
                               <DockPanel         
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="2">
                               <Label  x:Name="AvailableDomainLabel"
                                        Content="Available"
                                        Width="Auto"
                                        Height="28"
                                        DockPanel.Dock="Top"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource LabelStyle}"
                                        Foreground="{StaticResource StoneWhite}"
                                        FontWeight="Bold"/>
                              <ListView x:Name="AvailableListView"
                                        Grid.Row="1"
                                        Style="{StaticResource ListBoxStyle}"
                                        DisplayMemberPath="DomainTerm"
                                        SelectedIndex="0"
                                        Margin="2,2,2,2"
                                        SelectedItem="{Binding SelectedAvailableDomain}"
                                        ItemsSource="{Binding AvailableDomains}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDoubleClick">
                                                        <i:InvokeCommandAction Command="{Binding AddListCommand}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ListView>
                              </DockPanel>
                                </Grid>

                                </Grid>
                                
                            </DockPanel>

                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource FossilGrey}"
                                    BorderThickness="1"
                                    Grid.Column="2" >
                        <Grid>
                            <StackPanel>
                                <CheckBox Content="Automated Service?"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Grid.Row="0"
                                   Margin="0,10,0,10"
                                   IsChecked="{Binding Path=AutomationBool,Mode=TwoWay}" 
                                   />
                                
                                <Button x:Name="UpdateItem"
                                    Content="Update Item"
                                    Style="{StaticResource ButtonStyle}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,5,0,5"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding UpdateEnabled}"
                                    Command="{Binding UpdateItemCommand}" />
                            </StackPanel>

                        </Grid>
                    </Border>

                </Grid>

            </Grid>

        </Grid>
    </Border>

</UserControl>
